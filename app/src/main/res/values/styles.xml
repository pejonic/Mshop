<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="titleStyleBold16Sp">
        <item name="android:textSize">@dimen/text16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="titleStylePriceDown12sp">
        <item name="android:textSize">@dimen/text12sp</item>
        <item name="android:textColor">@color/redPriceDown</item>
    </style>
    <style name="titleStyleGreenLabel12sp">
        <item name="android:textSize">@dimen/text12sp</item>
        <item name="android:textColor">@color/discountGreenColor</item>
    </style>
</resources>
